@import 'vendor'
@import 'lib'

html, body
  background white
  margin 0
  padding 0
  width 100%
  height 100%

body
  line-height 1
  font-family Georgia, Serif
  color #112

a
  border-bottom solid 1px #003366
  color #003366
  text-decoration none

a:hover
  color #cc3300
  border none

.footer a
  margin 0 2px 0 0
  color #666

.footer-top
  height 20px
